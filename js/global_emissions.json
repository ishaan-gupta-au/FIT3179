{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": "container",
  "height": 250,
  "config": {
    "legend": {
      "labelFontSize": 10,
      "gradientDirection": "horizontal",
      "gradientLength": 122
    }
  },
  "params": [
    {
      "name": "Year_selection",
      "value": 2015,
      "bind": {
        "input": "range",
        "min": 1990,
        "max": 2015,
        "step": 1,
        "name": "Year: "
      }
    },
    {
      "name": "zoom_level",
      "value": 100,
      "bind": {
        "input": "range",
        "min": 65,
        "max": 200,
        "step": 20,
        "name": "Zoom: "
      }
    },
    {
      "name": "center_to",
      "value": [6, 14],
      "bind": {
        "input": "select",
        "options": [
          [6, 0],
          [34.5085, 8.7832],
          [100.6197, 34.0479],
          [15.2551, 54.526],
          [-105.2551, 54.5260],
          [140.0188, -22.7359],
          [-55.4915, -8.7832]
        ],
        "labels": [
          "All",
          "Africa",
          "Asia",
          "Europe",
          "North America",
          "Oceania",
          "South America"
        ],
        "name": "Continent: "
      }
    }
  ],
  "projection": {
    "type": "equirectangular",
    "center": {"expr": "center_to"},
    "scale": {"expr": "zoom_level"}
  },
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/ishaan-gupta-au/FIT3179_Assignment/main/js/ne_110m_admin_0_countries.json",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "transform": [
        {
          "calculate": "'Data is not available in ' + datum.properties.NAME",
          "as": "note"
        }
      ],
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"},
      "encoding": {"tooltip": {"field": "note"}}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/ishaan-gupta-au/FIT3179_Assignment/main/data/emissions.csv"
      },
      "transform": [
        {
          "lookup": "Code",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/ishaan-gupta-au/FIT3179_Assignment/main/js/ne_110m_admin_0_countries.json",
              "format": {
                "type": "topojson",
                "feature": "ne_110m_admin_0_countries"
              }
            },
            "key": "properties.BRK_A3"
          },
          "as": "geo"
        },
        {"filter": "datum.Year == Year_selection"}
      ],
      "mark": {"type": "geoshape", "stroke": "white"},
      "encoding": {
        "shape": {"field": "geo", "type": "geojson"},
        "color": {
          "field": "Share of Emissions (%)",
          "type": "quantitative",
          "scale": {"type": "threshold", "domain": [0.5, 4, 7.5, 11]}
        },
        "tooltip": [
          {"field": "Country", "type": "nominal", "title": "Country"},
          {"field": "Year", "type": "quantitative", "title": "Year"},
          {"field": "Share of Emissions (%)", "type": "quantitative"}
        ]
      }
    }
  ]
}