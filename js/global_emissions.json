{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Share of Global Food Emissions (2015)",
  "width": 800,
  "height": 500,
  "data": {
    "url": "https://raw.githubusercontent.com/ishaan-gupta-au/FIT3179_Assignment/main/js/ne_110m_admin_0_countries.json",
    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
  },
  "projection": {"type": "equirectangular"},
  "layer":[
    {
      "transform": [
        {"calculate": "'Data is not available in ' + datum.properties.NAME", "as": "note"}
      ],
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"},
      "encoding": {
        "tooltip": {
          "field": "note"
        }
      }
    },
    {
      "transform": [
        {
          "lookup": "properties.BRK_A3",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/ishaan-gupta-au/FIT3179_Assignment/main/data/share-global-food-emissions.csv"
            },
            "key": "Code",
            "fields": ["Share of global food emissions"]
          }
        }
      ],
      "mark": {"type": "geoshape", "stroke": "white"},
      "encoding": {
        "color": {
          "field": "Share of global food emissions",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [0, 3.5, 7.0, 10.5, 14]
          }
        },
        "tooltip": [
          {"field": "properties.NAME", "type": "nominal", "title": "Country"},
          {"field": "Share of global food emissions", "type": "quantitative"}
        ]
      }
    }
  ]
  
}
